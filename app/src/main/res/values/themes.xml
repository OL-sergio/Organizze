<resources>
    <!-- Base application theme. -->
    <style name="Theme.Organizze" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="expenseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/colorPrimaryExpense</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkExpense</item>
        <item name="android:colorAccent">@color/colorAccentExpense</item>
    </style>

    <style name="receivedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/colorPrimaryReceived</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDarkReceived</item>
        <item name="android:colorAccent">@color/colorAccentReceived</item>
    </style>

    <style name="Theme.Organizze.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyToolbarMenuStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColor">@color/purple_500</item>
    </style>

    <style name="MyToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.Organizze.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar"/>

    <style name="Theme.Organizze.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>